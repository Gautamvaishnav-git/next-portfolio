---
import { type CollectionEntry } from "astro:content";

interface Props {
  blog: CollectionEntry<"blogs">;
  transitionName?: string;
}

const { blog, transitionName } = Astro.props;
---

<a
  href={`/blogs/${blog.slug}`}
  class="hover:bg-primary2/30 border duration-200 border-transparent hover:border-text1/20 p-3 rounded-lg"
  transition:name={blog.slug}
>
  <h3 class="text-2xl subTitle font-bold">
    {blog.data.title}
  </h3>
  <p class="text-text2">
    {blog.data.description}
  </p>
  <p class="text-sm text-text2">
    Published: {blog.data.date}
  </p>
  {
    transitionName ? (
      <p transition:name={transitionName} class="text-sm text-text2">
        Auther: Gautam Vaishnav
      </p>
    ) : (
      <p class="text-sm text-text2">Auther: Gautam Vaishnav</p>
    )
  }
</a>

<style is:global>
  .subTitle {
    @apply no-underline hover:underline hover:decoration-wavy underline-offset-4;
  }
</style>
